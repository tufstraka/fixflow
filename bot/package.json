{
  "name": "@fix-flow/bot",
  "version": "1.0.0",
  "description": "Backend bot for FixFlow system",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "lint": "eslint src/",
    "db:init": "node src/db.js --init",
    "db:migrate": "node src/db.js --init",
    "db:migrate:prod": "NODE_ENV=production node src/db.js --init",
    "db:reset": "node src/db.js --reset"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 30000
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.700.0",
    "@mnee/ts-sdk": "^1.0.3",
    "@octokit/app": "^14.0.2",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^12.0.3",
    "@with-orbit/sdk": "^0.1.4",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
